<CriticalError>:

	msg: msg

	orientation: 'vertical'
	pos_hint: {'center_x': 0.5, 'top': 0.95}
	size_hint: ( 0.9, 0.9 )
	spacing: 10

	TextInput:
		id: msg
		size_hint: (1,2)
		readonly: True

	Button:
		size_hint: (1,1)
		text: 'Click to file a bug report'
		halign: 'center'
		valign: 'middle'
		on_release: root.fileBugReport()

<MainWindow>:
	color_main_bg: 0.188, 0.188, 0.188, 1
	color_menu_bg: 0.259, 0.259, 0.259, 1

	color_primary: 0.129, 0.588, 0.953, 1
	color_red: 0.957, 0.263, 0.212, 1

	actionbar: actionbar
	actionview: actionview
	toggle_btn: toggle_btn
	status: status
	nav_drawer: nav_drawer

	BoxLayout:
		orientation: 'vertical'

		ActionBar:
			id: actionbar

			ActionView:
				id: actionview

				# if you don't set the background image, then the background color
				# will be dark & muddled
				background_image: 'images/white.png'
				background_color: root.color_primary

				ActionPrevious:
					with_previous: False
					app_icon: 'images/menu.png'
					markup: True
					title: '[font=RobotoMedium][size=20sp]   BusKill[/size][/font]'
					on_release: root.toggle_menu()

		NavigationDrawer:
			id: nav_drawer
			anim_type: 'slide_above_simple'
			side_panel_width: min( dp(300), 0.8*self.width )

			# this is the distance from the left side of the app from which the
			# user can drag the navigation drawer open by touch gesture. It must be
			# low else it will block other taps on other buttons in that left-side
			# band
			#touch_accept_width: min( dp(300), 0.8*self.width )
			touch_accept_width: dp(15)

			ScrollView:

				StackLayout:
					orientation: 'lr-tb'
				
					Button:
						text: '[font=Roboto][size=24sp]  [/size][/font][font=mdicons][size=24sp]\ue923[/size][/font]     [font=RobotoMedium][size=16sp]Update[/size][/font]'
						markup: True
						halign: 'left'
						valign: 'center'
						text_size: self.size
						size_hint: 1, None
						height: 50
						background_normal: ''
						background_color: root.color_menu_bg
						on_release: root.upgrade1()

					Button:
						text: '[font=Roboto][size=24sp]  [/size][/font][font=mdicons][size=24sp]\ue8b8[/size][/font]     [font=RobotoMedium][size=16sp]Settings[/size][/font]'
						markup: True
						halign: 'left'
						valign: 'center'
						text_size: self.size
						size_hint: 1, None
						height: 50
						background_normal: ''
						background_color: root.color_menu_bg
						on_release:
							root.manager.transition.direction = 'left'
							root.manager.current = 'settings'

					Button:
						text: '[font=Roboto][size=24sp]  [/size][/font][font=mdicons][size=24sp]\ue868[/size][/font]     [font=RobotoMedium][size=16sp]Debug Log[/size][/font]'
						markup: True
						halign: 'left'
						valign: 'center'
						text_size: self.size
						size_hint: 1, None
						height: 50
						background_normal: ''
						background_color: root.color_menu_bg
						on_release:
							root.manager.transition.direction = 'left'
							root.manager.current = 'debug_log'

					Button:
						text: '[font=Roboto][size=24sp]  [/size][/font][font=mdicons][size=24sp]\ue88f[/size][/font]     [font=RobotoMedium][size=16sp]About[/size][/font]'
						markup: True
						halign: 'left'
						valign: 'center'
						text_size: self.size
						size_hint: 1, None
						height: 50
						background_normal: ''
						background_color: root.color_menu_bg
						on_release: root.about()

					Widget:
						id: separator
						height: 1
						size_hint: 1, None
						canvas:
							Color:
								rgb: 0.349, 0.349, 0.349, 1
							Rectangle:
								pos: 0, separator.y
								size: self.width, 1

			BoxLayout:

				orientation: 'vertical'
				size_hint: ( 1, 0.95 )
				pos_hint: {'top': 1}

				BoxLayout:

					orientation: 'vertical'
					size_hint: ( 0.9, 1 )
					pos_hint: {'center_x': 0.5, 'top': 1}
					spacing: 10

					Label:
						id: status 
						text: "BusKill is disarmed."
						size_hint: (1,2)
						text_size: self.size
						halign: 'center'
						valign: 'middle'
						font_name: "Roboto"
						font_size: '20sp'

					Button:
						id: toggle_btn
						text: "Arm"
						font_name: "RobotoMedium"
						font_size: '40sp'
						background_normal: ''
						background_color: 0.129, 0.588, 0.953, 1
						size_hint: (1,1)
						halign: 'center'
						valign: 'middle'
						on_release: root.toggle_buskill()

<DialogConfirmation>:
	id: upgrade_dialog1
	auto_dismiss: True
	size_hint: (0.9, None)
	padding: '16dp', '40dp', '16dp', 0
	color_primary: 0.129, 0.588, 0.953, 1
	height: dialog_contents.minimum_height + dp(16)

	l_title: l_title
	l_body: l_body
	b_cancel: b_cancel
	b_continue: b_continue
	dialog_contents: dialog_contents

	BoxLayout:
		id: dialog_contents
		orientation: 'vertical'
		height: self.minimum_height
		spacing: 10

		Label:
			id: l_title
			text: root.title
			font_name: "RobotoMedium"
			font_size: '20sp'
			markup: True
			pos_hint: {'center_x': 0.5}
			size_hint: None, None
			size: self.texture_size

		Label:
			id: l_body
			text: root.body
			text_size: self.size[0], None
			font_name: "Roboto"
			font_size: '16sp'
			markup: True
			size_hint: 1, None
			size: self.texture_size

		StackLayout:
			orientation: 'rl-tb'
			spacing: '14dp'
			padding: 0, '18dp', 0, 0
			size_hint: 1, None
			height: self.minimum_height
	
			Button:
				id: b_continue
				text: root.button
				padding: '8dp', '8dp'
				size_hint: None, None
				size: self.texture_size
				background_normal: ''
				background_color: root.color_primary
				on_release: root.continue_function()

			Button:
				id: b_cancel
				text: 'Cancel'
				size_hint: None, None
				size: self.texture_size
				padding: '8dp', '8dp'
				background_normal: ''
				background_color: 0, 0, 0, 0
				on_release: upgrade_dialog1.dismiss()

<DebugLogLines@Label>:
	text: "Loading Log. Please wait."
	size_hint_x: None
	width: self.texture_size[0]
	font_name: "RobotoMono"
	font_size: '12sp'

<-BusKillSettingsWithNoMenu>:
	color_main_bg: 0.188, 0.188, 0.188, 1
	color_primary: 0.129, 0.588, 0.953, 1

	# sets the background from black to grey
	canvas.before:
		Color:
			rgba: root.color_main_bg
		Rectangle:
			pos: self.pos
			size: self.size

<-SettingsPanel>:
	spacing: 5
	padding: 5
	size_hint_y: None
	height: self.minimum_height

<-BusKillSettingItem>:
	size_hint: .25, None
	height: labellayout.height + dp(10)
	padding: 6
	spacing: 20

	icon_label: icon_label

# uncomment to debug boundaries
#	canvas:
#		Color:
#			#rgba: 47 / 255., 167 / 255., 212 / 255., self.selected_alpha
#			rgba: 0, 1, 0, 1
#		Rectangle:
#			pos: self.x, self.y + 1
#			size: self.size
#		Color:
#			rgb: .2, .2, .2
#		Rectangle:
#			pos: self.x, self.y - 2
#			size: self.width, 1

	StackLayout:
		pos: root.pos
		orientation: 'lr-tb'
		padding: root.padding
		spacing: root.spacing

		Label:
			id: icon_label
			markup: True

			# mdicons doesn't have a "nbsp" icon, so we hardcode the icon to
			# something unimportant and then set the alpha to 00 if no icon is
			# defined for this SettingItem
			text: ('[font=mdicons][size=40sp][color=ffffff00]\ue256[/color][/size][/font]' if root.icon == None else '[font=mdicons][size=40sp]' +root.icon+ '[/size][/font]')
			size: self.texture_size
			size_hint: None, None
			height: labellayout.height

# uncomment to debug boundaries
#			canvas.before:
#				Color:
#					rgba: 0, 0, 1, 1
#				Rectangle:
#					pos: self.pos
#					size: self.size

		Label:
			id: labellayout
			markup: True
			text: u'{0}\n[size=13sp][color=999999]{1}[/color][/size]'.format(root.title or '', root.value or '')
			font_size: '15sp'
			text_size: root.width - icon_label.width - (2*root.padding) - (2*root.spacing), None
			size: self.texture_size
			size_hint: None, None

			# set the minimum height of this item so that fat fingers don't have
			# issues on small touchscreen displays (for better UX)
			height: max(self.height, dp(50))

# uncomment to debug boundaries
#			canvas.before:
#				Color:
#					rgba: 1, 0, 0, 1
#				Rectangle:
#					pos: self.pos
#					size: self.size

