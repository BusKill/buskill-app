<CriticalError>:

	msg: msg

	orientation: 'vertical'
	pos_hint: {'center_x': 0.5, 'top': 0.95}
	size_hint: ( 0.9, 0.9 )
	spacing: 10

	TextInput:
		id: msg
		size_hint: (1,2)
		readonly: True

	Button:
		size_hint: (1,1)
		text: 'Click to file a bug report'
		halign: 'center'
		valign: 'middle'
		on_release: root.fileBugReport()

<MainWindow>:
	orientation: 'vertical'

	color_main_bg: 0.188, 0.188, 0.188, 1
	color_menu_bg: 0.259, 0.259, 0.259, 1

	color_primary: 0.129, 0.588, 0.953, 1
	color_red: 0.957, 0.263, 0.212, 1

	actionview: actionview
	toggle_btn: toggle_btn
	status: status
	nav_drawer: nav_drawer

	ActionBar:

		ActionView:
			id: actionview
			background_image: 'images/white.png'
			background_color: 0.129, 0.588, 0.953, 1

			ActionPrevious:
				with_previous: False
				app_icon: 'images/menu.png'
				markup: True
				title: '[font=RobotoMedium][size=20]   BusKill[/size][/font]'
				on_release: root.toggle_menu()

	NavigationDrawer:
		id: nav_drawer
		anim_type: 'slide_above_simple'
		side_panel_width: min( dp(300), 0.8*self.width )

		# this is the distance from the left side of the app from which the user
		# can drag the navigation drawer open by touch gesture. It must be low else
		# it will block other taps on other buttons in that left-side band
		#touch_accept_width: min( dp(300), 0.8*self.width )
		touch_accept_width: dp(15)

		ScrollView:

			StackLayout:
				orientation: 'lr-tb'
			
				Button:
					text: '[font=Roboto][size=24]    [/size][/font][font=mdicons][size=24]\ue923[/size][/font]     [font=RobotoMedium][size=16]Update[/size][/font]'
					markup: True
					halign: 'left'
					valign: 'center'
					text_size: self.size
					size_hint: 1, None
					height: 60
					background_normal: ''
					background_color: root.color_menu_bg
					on_release: root.update1()

				Widget:
					id: separator
					height: 1
					size_hint: 1, None
					canvas:
						Color:
							rgb: 0.349, 0.349, 0.349, 1
						Rectangle:
							pos: 0, separator.y
							size: self.width, 1

		BoxLayout:

			orientation: 'vertical'
			size_hint: ( 1, 0.95 )
			pos_hint: {'top': 1}

			BoxLayout:

				orientation: 'vertical'
				size_hint: ( 0.9, 1 )
				pos_hint: {'center_x': 0.5, 'top': 1}
				spacing: 10

				Label:
					id: status 
					text: "BusKill is currently disarmed."
					size_hint: (1,2)
					text_size: self.size
					halign: 'center'
					valign: 'middle'
					font_name: "Roboto"
					font_size: 16

				Button:
					id: toggle_btn
					text: "Arm"
					font_name: "Roboto"
					font_size: 16
					background_normal: ''
					background_color: 0.129, 0.588, 0.953, 1
					size_hint: (1,1)
					halign: 'center'
					valign: 'middle'
					on_release: root.toggle_buskill()

<DialogConfirmation>:
	id: update_dialog1
	auto_dismiss: True
	size_hint: (0.9, None)
	padding: '16dp', '40dp', '16dp', 0
	height: dialog_contents.minimum_height + dp(16)

	color_primary: 0.129, 0.588, 0.953, 1
	l_title: l_title
	l_body: l_body
	b_cancel: b_cancel
	b_continue: b_continue
	dialog_contents: dialog_contents

	BoxLayout:
		id: dialog_contents
		orientation: 'vertical'
		height: self.minimum_height
		spacing: 10

		Label:
			id: l_title
			text: root.title
			font_name: "RobotoMedium"
			font_size: 20
			markup: True
			pos_hint: {'center_x': 0.5}
			size_hint: None, None
			size: self.texture_size

		Label:
			id: l_body
			text: root.body
			text_size: self.size
			font_name: "Roboto"
			font_size: 16
			markup: True
			pos_hint: {'center_x': 0.5}
			size_hint: 1, None
			size_y: self.texture_size

		StackLayout:
			orientation: 'rl-tb'
			spacing: '14dp'
			padding: 0, '18dp', 0, 0
			size_hint: 1, None
			height: self.minimum_height
	
			Button:
				id: b_continue
				text: root.button
				padding: '8dp', '8dp'
				size_hint: None, None
				size: self.texture_size
				background_normal: ''
				background_color: root.color_primary
				on_release: root.continue_function()

			Button:
				id: b_cancel
				text: 'Cancel'
				size_hint: None, None
				size: self.texture_size
				padding: '8dp', '8dp'
				background_normal: ''
				background_color: 0, 0, 0, 0
				on_release: update_dialog1.dismiss()
