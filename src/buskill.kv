<MainWindow>:

	toggle_btn: toggle_btn

	cols: 1
	size: (20,500)
	padding: [100,100]
	orientation: 'vertical'

	Button:
		id: toggle_btn
		text: "BusKill is currently disarmed\n(click to arm)"
		#size: self.texture_size
		size_hint: (1,1)
		halign: 'center'
		valign: 'middle'
		on_release: root.toggleBusKill()

