<DebugLog>:
	color_primary: 0.129, 0.588, 0.953, 1

	actionbar: actionbar
	actionview: actionview
	rv: rv
	debug_header: debug_header

	BoxLayout:
		orientation: 'vertical'

		ActionBar:
			id: actionbar

			ActionView:
				id: actionview

				background_image: 'images/white.png'
				background_color: root.color_primary

				ActionPrevious:
					with_previous: False
					app_icon: 'images/arrow_back_white.png'
					markup: True
					title: '[font=RobotoMedium][size=18]   Debug Log[/size][/font]'
					on_release:
						root.manager.transition.direction = 'right'
						root.manager.current = 'main'

		BoxLayout:

			orientation: 'vertical'
			size_hint: ( 1, 0.95 )
			pos_hint: {'top': 1}

			BoxLayout:

				orientation: 'vertical'
				size_hint: ( 0.9, 1 )
				pos_hint: {'center_x': 0.5, 'top': 1}
				spacing: 10

				Label:
					id: debug_header
					markup: True
					text: 'Debug Log Below [font=mdicons][size=18][ref=help_debug_log]\ue8fd[/ref][/size][/font]'
					size_hint: (1,1)
					text_size: self.size
					halign: 'center'
					valign: 'middle'
					font_name: "Roboto"
					font_size: 16

				RecycleView:
					viewclass: 'DebugLogLines'
					id: rv
					size_hint: (1,15)
					scroll_type: ['bars', 'content']
					bar_width: dp(25)

					# scroll to the very bottom of the log
					scroll_y: 0

					RecycleBoxLayout:
						default_size: None, dp(12)
						default_size_hint: None, None
						size_hint: None, None
						height: self.minimum_height
						orientation: 'vertical'

						# TODO: fix this so that the horizontal scroll will be as wide
						#       as the longest line
						size: dp(3000), self.minimum_height

				BoxLayout:
					orientation: 'horizontal'
					size_hint: (1,2)

					Button:
						size_hint: (1,0.8)
						pos_hint: {'top': 1}
						text: 'Copy Log'
						halign: 'center'
						valign: 'middle'
						on_release: root.copy_debug_log()

					Button:
						size_hint: (1,0.8)
						pos_hint: {'top': 1}
						text: 'Report Bug'
						halign: 'center'
						valign: 'middle'
						on_release: root.report_bug()
