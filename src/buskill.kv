<CriticalError>:

	msg: msg

	orientation: 'vertical'
	pos_hint: {'center_x': 0.5, 'top': 0.95}
	size_hint: ( 0.9, 0.9 )
	spacing: 10

	TextInput:
		id: msg
		size_hint: (1,2)
		readonly: True

	Button:
		size_hint: (1,1)
		text: 'Click to file a bug report'
		halign: 'center'
		valign: 'middle'
		on_release: root.fileBugReport()

<MainWindow>:
	orientation: 'vertical'

	color_main_bg: 0.188, 0.188, 0.188, 1
	color_menu_bg: 0.259, 0.259, 0.259, 1

	actionview: actionview
	toggle_btn: toggle_btn
	status: status
	nav_drawer: nav_drawer

	ActionBar:

		ActionView:
			id: actionview
			background_image: 'images/white.png'
			background_color: 0.129, 0.588, 0.953, 1

			ActionPrevious:
				with_previous: False
				app_icon: 'images/menu.png'
				markup: True
				title: '[font=RobotoMedium][size=20]   BusKill[/size][/font]'
				on_release: root.toggleMenu()

	NavigationDrawer:
		id: nav_drawer
		anim_type: 'slide_above_simple'
		side_panel_width: 0.8*self.width

		ScrollView:

			StackLayout:
				orientation: 'lr-tb'
			
				Button:
					text: '[font=Roboto][size=24]    [/size][/font][font=mdicons][size=24]\ue923[/size][/font]     [font=RobotoMedium][size=16]Update[/size][/font]'
					markup: True
					halign: 'left'
					valign: 'center'
					text_size: self.size
					size_hint: 1, None
					height: 60
					background_normal: ''
					background_color: root.color_menu_bg

				Widget:
					id: separator
					height: 1
					size_hint: 1, None
					canvas:
						Color:
							rgb: 0.349, 0.349, 0.349, 1
						Rectangle:
							pos: 0, separator.y
							size: self.width, 1

		BoxLayout:

			orientation: 'vertical'
			size_hint: ( 1, 0.95 )
			pos_hint: {'top': 1}

			primary_color: 0.129, 0.588, 0.953, 1
			red_color: 0.957, 0.263, 0.212, 1

			BoxLayout:

				orientation: 'vertical'
				size_hint: ( 0.9, 1 )
				pos_hint: {'center_x': 0.5, 'top': 1}
				spacing: 10

				Label:
					id: status 
					text: "BusKill is currently disarmed."
					size_hint: (1,2)
					halign: 'center'
					valign: 'middle'
					font_name: "Roboto"
					font_size: 16

				Button:
					id: toggle_btn
					text: "Arm"
					font_name: "Roboto"
					font_size: 16
					background_normal: ''
					background_color: 0.129, 0.588, 0.953, 1
					size_hint: (1,1)
					halign: 'center'
					valign: 'middle'
					on_release: root.toggleBusKill()
