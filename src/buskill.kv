<CriticalError>:

	msg: msg

	orientation: 'vertical'
	pos_hint: {'center_x': 0.5, 'top': 0.95}
	size_hint: ( 0.9, 0.9 )
	spacing: 10

	TextInput:
		id: msg
		size_hint: (1,2)
		readonly: True

	Button:
		size_hint: (1,1)
		text: 'Click to file a bug report'
		halign: 'center'
		valign: 'middle'
		on_release: root.fileBugReport()

<MainWindow>:
	color_main_bg: 0.188, 0.188, 0.188, 1
	color_menu_bg: 0.259, 0.259, 0.259, 1

	color_primary: 0.129, 0.588, 0.953, 1
	color_red: 0.957, 0.263, 0.212, 1

	actionview: actionview
	toggle_btn: toggle_btn
	status: status
	nav_drawer: nav_drawer

	BoxLayout:
		orientation: 'vertical'

		ActionBar:

			ActionView:
				id: actionview
				background_image: 'images/white.png'
				background_color: 0.129, 0.588, 0.953, 1

				ActionPrevious:
					with_previous: False
					app_icon: 'images/menu.png'
					markup: True
					title: '[font=RobotoMedium][size=20]   BusKill[/size][/font]'
					on_release: root.toggle_menu()

		NavigationDrawer:
			id: nav_drawer
			anim_type: 'slide_above_simple'
			side_panel_width: min( dp(300), 0.8*self.width )

			# this is the distance from the left side of the app from which the
			# user can drag the navigation drawer open by touch gesture. It must be
			# low else it will block other taps on other buttons in that left-side
			# band
			#touch_accept_width: min( dp(300), 0.8*self.width )
			touch_accept_width: dp(15)

			ScrollView:

				StackLayout:
					orientation: 'lr-tb'
				
					Button:
						text: '[font=Roboto][size=24]  [/size][/font][font=mdicons][size=24]\ue923[/size][/font]     [font=RobotoMedium][size=16]Update[/size][/font]'
						markup: True
						halign: 'left'
						valign: 'center'
						text_size: self.size
						size_hint: 1, None
						height: 50
						background_normal: ''
						background_color: root.color_menu_bg
						on_release: root.upgrade1()

					Button:
						text: '[font=Roboto][size=24]  [/size][/font][font=mdicons][size=24]\ue868[/size][/font]     [font=RobotoMedium][size=16]Debug Log[/size][/font]'
						markup: True
						halign: 'left'
						valign: 'center'
						text_size: self.size
						size_hint: 1, None
						height: 50
						background_normal: ''
						background_color: root.color_menu_bg
						on_release:
							root.manager.transition.direction = 'left'
							root.manager.current = 'debug_log'
							root.debug_log1()

					Button:
						text: '[font=Roboto][size=24]  [/size][/font][font=mdicons][size=24]\ue88f[/size][/font]     [font=RobotoMedium][size=16]About[/size][/font]'
						markup: True
						halign: 'left'
						valign: 'center'
						text_size: self.size
						size_hint: 1, None
						height: 50
						background_normal: ''
						background_color: root.color_menu_bg
						on_release: root.about()

					Widget:
						id: separator
						height: 1
						size_hint: 1, None
						canvas:
							Color:
								rgb: 0.349, 0.349, 0.349, 1
							Rectangle:
								pos: 0, separator.y
								size: self.width, 1

			BoxLayout:

				orientation: 'vertical'
				size_hint: ( 1, 0.95 )
				pos_hint: {'top': 1}

				BoxLayout:

					orientation: 'vertical'
					size_hint: ( 0.9, 1 )
					pos_hint: {'center_x': 0.5, 'top': 1}
					spacing: 10

					Label:
						id: status 
						text: "BusKill is currently disarmed."
						size_hint: (1,2)
						text_size: self.size
						halign: 'center'
						valign: 'middle'
						font_name: "Roboto"
						font_size: 16

					Button:
						id: toggle_btn
						text: "Arm"
						font_name: "Roboto"
						font_size: 16
						background_normal: ''
						background_color: 0.129, 0.588, 0.953, 1
						size_hint: (1,1)
						halign: 'center'
						valign: 'middle'
						on_release: root.toggle_buskill()

<DialogConfirmation>:
	id: upgrade_dialog1
	auto_dismiss: True
	size_hint: (0.9, None)
	padding: '16dp', '40dp', '16dp', 0
	height: dialog_contents.minimum_height + dp(16)

	color_primary: 0.129, 0.588, 0.953, 1
	l_title: l_title
	l_body: l_body
	b_cancel: b_cancel
	b_continue: b_continue
	dialog_contents: dialog_contents

	BoxLayout:
		id: dialog_contents
		orientation: 'vertical'
		height: self.minimum_height
		spacing: 10

		Label:
			id: l_title
			text: root.title
			font_name: "RobotoMedium"
			font_size: 20
			markup: True
			pos_hint: {'center_x': 0.5}
			size_hint: None, None
			size: self.texture_size

		Label:
			id: l_body
			text: root.body
			text_size: self.size[0], None
			font_name: "Roboto"
			font_size: 16
			markup: True
			size_hint: 1, None
			size: self.texture_size

		StackLayout:
			orientation: 'rl-tb'
			spacing: '14dp'
			padding: 0, '18dp', 0, 0
			size_hint: 1, None
			height: self.minimum_height
	
			Button:
				id: b_continue
				text: root.button
				padding: '8dp', '8dp'
				size_hint: None, None
				size: self.texture_size
				background_normal: ''
				background_color: root.color_primary
				on_release: root.continue_function()

			Button:
				id: b_cancel
				text: 'Cancel'
				size_hint: None, None
				size: self.texture_size
				padding: '8dp', '8dp'
				background_normal: ''
				background_color: 0, 0, 0, 0
				on_release: upgrade_dialog1.dismiss()

<DebugLogLines@Label>:
#	text: "Loading Log. Please wait."
	size_hint_x: None
	width: self.texture_size[0]
	#font_name: "RobotoMono"
	#font_size: 10
#	halign: 'left'
#	text_size: self.size

	canvas.before:
		Color:
			rgb: 0.5, 0.5, 1
		Rectangle:
			size: self.size
			pos: self.pos

<DebugLog>:

	rv: rv

	BoxLayout:
		orientation: 'vertical'

		ActionBar:

			ActionView:
				id: actionview

				ActionPrevious:
					with_previous: False
					app_icon: 'images/arrow_back_white.png'
					markup: True
					title: '[font=RobotoMedium][size=18]   Debug Log[/size][/font]'
					on_release:
						root.manager.transition.direction = 'right'
						root.manager.current = 'main'

		BoxLayout:

			orientation: 'vertical'
			size_hint: ( 1, 0.95 )
			pos_hint: {'top': 1}

			BoxLayout:

				orientation: 'vertical'
				size_hint: ( 0.9, 1 )
				pos_hint: {'center_x': 0.5, 'top': 1}
				spacing: 10

				Label:
					text: "Debug Log Below"
					size_hint: (1,1)
					text_size: self.size
					halign: 'center'
					valign: 'middle'
					font_name: "Roboto"
					font_size: 16

				RecycleView:
					viewclass: 'DebugLogLines'
					id: rv
					size_hint: (1,15)
					#size: dp(800), dp(800)
					scroll_type: ['bars', 'content']
					bar_width: dp(25)

					RecycleBoxLayout:
						# setting default_size prevents the big gap between lines, but
						# it truncates the line's content too :(
						spacing: dp(1)
						padding: dp(2)
						default_size: None, dp(25)
						default_size_hint: None, None
						size_hint: None, None
						height: self.minimum_height
						#width: self.minimum_width
						#size_x: self.minimum_size[0]
						#size_x: dp(900)
						#size_y: dp(900)
						#size: self.minimum_width, self.minimum_height
						#size: self.minimum_width, dp(900)

						# if you set this, then you get both scroll bars
						#size: (900), dp(900)
						size: dp(900), self.minimum_height
						orientation: 'vertical'

				BoxLayout:
					orientation: 'horizontal'
					size_hint: (1,2)

					Button:
						size_hint: (1,0.8)
						pos_hint: {'top': 1}
						text: 'Copy Log'
						halign: 'center'
						valign: 'middle'
						on_release: root.copy_debug_log()

					Button:
						size_hint: (1,0.8)
						pos_hint: {'top': 1}
						text: 'Report Bug'
						halign: 'center'
						valign: 'middle'
						#on_release: root.fileBugReport()
