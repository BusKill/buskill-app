<CriticalError>:

	msg: msg

	orientation: 'vertical'
	pos_hint: {'center_x': 0.5, 'top': 0.95}
	size_hint: ( 0.9, 0.9 )
	spacing: 10

	TextInput:
		id: msg
		size_hint: (1,2)
		readonly: True

	Button:
		size_hint: (1,1)
		text: 'Click to file a bug report'
		halign: 'center'
		valign: 'middle'
		on_release: root.fileBugReport()

<MainWindow>:
	color_main_bg: 0.188, 0.188, 0.188, 1
	color_menu_bg: 0.259, 0.259, 0.259, 1

	color_primary: 0.129, 0.588, 0.953, 1
	color_red: 0.957, 0.263, 0.212, 1

	actionbar: actionbar
	actionview: actionview
	toggle_btn: toggle_btn
	status: status
	nav_drawer: nav_drawer

	BoxLayout:
		orientation: 'vertical'

		ActionBar:
			id: actionbar

			ActionView:
				id: actionview

				# if you don't set the background image, then the background color
				# will be dark & muddled
				background_image: 'images/white.png'
				background_color: root.color_primary

				ActionPrevious:
					with_previous: False
					app_icon: 'images/menu.png'
					markup: True
					title: '[font=RobotoMedium][size=20]   BusKill[/size][/font]'
					on_release: root.toggle_menu()

		NavigationDrawer:
			id: nav_drawer
			anim_type: 'slide_above_simple'
			side_panel_width: min( dp(300), 0.8*self.width )

			# this is the distance from the left side of the app from which the
			# user can drag the navigation drawer open by touch gesture. It must be
			# low else it will block other taps on other buttons in that left-side
			# band
			#touch_accept_width: min( dp(300), 0.8*self.width )
			touch_accept_width: dp(15)

			ScrollView:

				StackLayout:
					orientation: 'lr-tb'
				
					Button:
						text: '[font=Roboto][size=24]  [/size][/font][font=mdicons][size=24]\ue923[/size][/font]     [font=RobotoMedium][size=16]Update[/size][/font]'
						markup: True
						halign: 'left'
						valign: 'center'
						text_size: self.size
						size_hint: 1, None
						height: 50
						background_normal: ''
						background_color: root.color_menu_bg
						on_release: root.upgrade1()

					Button:
						text: '[font=Roboto][size=24]  [/size][/font][font=mdicons][size=24]\ue8b8[/size][/font]     [font=RobotoMedium][size=16]Settings[/size][/font]'
						markup: True
						halign: 'left'
						valign: 'center'
						text_size: self.size
						size_hint: 1, None
						height: 50
						background_normal: ''
						background_color: root.color_menu_bg
						on_release:
							root.manager.transition.direction = 'left'
							root.manager.current = 'settings'

					Button:
						text: '[font=Roboto][size=24]  [/size][/font][font=mdicons][size=24]\ue868[/size][/font]     [font=RobotoMedium][size=16]Debug Log[/size][/font]'
						markup: True
						halign: 'left'
						valign: 'center'
						text_size: self.size
						size_hint: 1, None
						height: 50
						background_normal: ''
						background_color: root.color_menu_bg
						on_release:
							root.manager.transition.direction = 'left'
							root.manager.current = 'debug_log'

					Button:
						text: '[font=Roboto][size=24]  [/size][/font][font=mdicons][size=24]\ue88f[/size][/font]     [font=RobotoMedium][size=16]About[/size][/font]'
						markup: True
						halign: 'left'
						valign: 'center'
						text_size: self.size
						size_hint: 1, None
						height: 50
						background_normal: ''
						background_color: root.color_menu_bg
						on_release: root.about()

					Widget:
						id: separator
						height: 1
						size_hint: 1, None
						canvas:
							Color:
								rgb: 0.349, 0.349, 0.349, 1
							Rectangle:
								pos: 0, separator.y
								size: self.width, 1

			BoxLayout:

				orientation: 'vertical'
				size_hint: ( 1, 0.95 )
				pos_hint: {'top': 1}

				BoxLayout:

					orientation: 'vertical'
					size_hint: ( 0.9, 1 )
					pos_hint: {'center_x': 0.5, 'top': 1}
					spacing: 10

					Label:
						id: status 
						text: "BusKill is currently disarmed."
						size_hint: (1,2)
						text_size: self.size
						halign: 'center'
						valign: 'middle'
						font_name: "Roboto"
						font_size: 16

					Button:
						id: toggle_btn
						text: "Arm"
						font_name: "Roboto"
						font_size: 16
						background_normal: ''
						background_color: 0.129, 0.588, 0.953, 1
						size_hint: (1,1)
						halign: 'center'
						valign: 'middle'
						on_release: root.toggle_buskill()

<DialogConfirmation>:
	id: upgrade_dialog1
	auto_dismiss: True
	size_hint: (0.9, None)
	padding: '16dp', '40dp', '16dp', 0
	color_primary: 0.129, 0.588, 0.953, 1
	height: dialog_contents.minimum_height + dp(16)

	l_title: l_title
	l_body: l_body
	b_cancel: b_cancel
	b_continue: b_continue
	dialog_contents: dialog_contents

	BoxLayout:
		id: dialog_contents
		orientation: 'vertical'
		height: self.minimum_height
		spacing: 10

		Label:
			id: l_title
			text: root.title
			font_name: "RobotoMedium"
			font_size: 20
			markup: True
			pos_hint: {'center_x': 0.5}
			size_hint: None, None
			size: self.texture_size

		Label:
			id: l_body
			text: root.body
			text_size: self.size[0], None
			font_name: "Roboto"
			font_size: 16
			markup: True
			size_hint: 1, None
			size: self.texture_size

		StackLayout:
			orientation: 'rl-tb'
			spacing: '14dp'
			padding: 0, '18dp', 0, 0
			size_hint: 1, None
			height: self.minimum_height
	
			Button:
				id: b_continue
				text: root.button
				padding: '8dp', '8dp'
				size_hint: None, None
				size: self.texture_size
				background_normal: ''
				background_color: root.color_primary
				on_release: root.continue_function()

			Button:
				id: b_cancel
				text: 'Cancel'
				size_hint: None, None
				size: self.texture_size
				padding: '8dp', '8dp'
				background_normal: ''
				background_color: 0, 0, 0, 0
				on_release: upgrade_dialog1.dismiss()

<DebugLogLines@Label>:
	text: "Loading Log. Please wait."
	size_hint_x: None
	width: self.texture_size[0]
	font_name: "RobotoMono"
	font_size: dp(12)

<-SettingsPanel>:
    spacing: 5
    padding: 5
    size_hint_y: None
    height: self.minimum_height

<-BusKillSettingItem>:
	size_hint: .25, None
	height: labellayout.height + dp(10)
#	content: content
	padding: 6
	spacing: 20

	icon_label: icon_label

	canvas:
		Color:
			rgba: 47 / 255., 167 / 255., 212 / 255., self.selected_alpha
			#rgba: 0, 1, 0, 1
		Rectangle:
			pos: self.x, self.y + 1
			size: self.size
		Color:
			rgb: .2, .2, .2
		Rectangle:
			pos: self.x, self.y - 2
			size: self.width, 1

	StackLayout:
		pos: root.pos
		orientation: 'lr-tb'
		#spacing: 30
		padding: root.padding
		spacing: root.spacing

#		canvas:
#			Color:
#				rgba: 1, 0, 0, 1
#			Rectangle:
#				pos: self.pos
#				size: self.size

		Label:
			id: icon_label
			markup: True
			#text_size: self.width, None
			#text_size: self.width - 32, None
			#text_size: dp(5), dp(5)
			#size: dp(5), dp(5)
			#size: 5, 5
			#width: 5
			#text: '[font=mdicons][size=18]{0}[/size][/font]'.format(root.icon or '')
			#text: '{0}'.format('[font=mdicons][size=18]' +root.icon+ '[/size][/font]' or '[font=mdicons][size=18]\ue256[/size][/font]')

			# mdicons doesn't have a "nbsp" icon, so we hardcode the icon to
			# something unimportant and then set the alpha to 00 if no icon is
			# defined for this SettingItem
			text: ('[font=mdicons][size=18][color=ffffff00]\ue256[/color][/size][/font]' if root.icon == None else '[font=mdicons][size=18]' +root.icon+ '[/size][/font]')
			#text: '[size=18]{0}[/size]'.format(root.icon or '')
			#text: 'YONG'
			size: self.texture_size
			#size: [ self.texture_size[0] + dp(10), self.texture_size[1] + dp(10) ]
			#size_x: self.texture_size[0]
			#size_y: self.texture_size[1]
			size_hint: None, None
			height: labellayout.height

			canvas.before:
				Color:
					rgba: 0, 0, 1, 1
				Rectangle:
					pos: self.pos
					size: self.size

		Label:
			#size_hint_x: .66
			id: labellayout
			markup: True
			#text: "world"
			#text: "tthere is a big rock candy mountain there is a big rock candy mountain there is a big rock candy mountain here is a big rock candy mountain "
			#width: 5
			#text: u'{0}\n[size=13sp][color=999999]{1}[/color][/size]'.format(root.title or '', root.desc or '')
			text: u'{0}\n[size=13sp][color=999999]{1}[/color][/size]'.format(root.title or '', root.value or '')
			font_size: '15sp'
			#text_size: self.size
			#text_size: self.width, None
			#size_hint_y: None
			#size_hint: 1, None
			#size: dp(5), dp(5)
			#size: 5, 5
			text_size: root.width - icon_label.width - (2*root.padding) - (2*root.spacing), None
			size: self.texture_size
			#size: [ self.texture_size[0] + dp(20), self.texture_size[1] + dp(20) ]
			size_hint: None, None

			# set the minimum height of this item so that fat fingers don't have
			# issues on small touchscreen displays (for better UX)
			height: max(self.height, dp(80))

			canvas.before:
				Color:
					rgba: 1, 0, 0, 1
				Rectangle:
					pos: self.pos
					size: self.size

<BusKillOptionItem>:
	size_hint: .25, None
	height: labellayout.height + dp(10)
#	content: content
	padding: 6
	spacing: 20

	icon_label: icon_label
	radio_button_label: radio_button_label

	canvas:
		Color:
			#rgba: 47 / 255., 167 / 255., 212 / 255., self.selected_alpha
			rgba: 0, 1, 0, 1
		Rectangle:
			pos: self.x, self.y + 1
			size: self.size
		Color:
			rgb: .2, .2, .2
		Rectangle:
			pos: self.x, self.y - 2
			size: self.width, 1

	StackLayout:
		pos: root.pos
		orientation: 'lr-tb'
		#spacing: 30
		padding: root.padding
		spacing: root.spacing

		Label:
			id: radio_button_label
			markup: True
			#text: ('[font=mdicons][size=18][color=ffffff00]\ue256[/color][/size][/font]' if root.icon == None else '[font=mdicons][size=18]' +root.icon+ '[/size][/font]')
			#text: '[font=mdicons][size=18]\ue836[/size][/font]'
			text: ('[font=mdicons][size=18]\ue837[/size][/font]' if root.parent_option.value == root.value else '[font=mdicons][size=18]\ue836[/size][/font]')
			size: self.texture_size
			size_hint: None, None
			height: labellayout.height

			#on_touch_up: root.clicked()

			canvas.before:
				Color:
					rgba: 1, 0, 0, 1
				Rectangle:
					pos: self.pos
					size: self.size

		Label:
			id: icon_label
			markup: True
			text: ('[font=mdicons][size=18][color=ffffff00]\ue256[/color][/size][/font]' if root.icon == None else '[font=mdicons][size=18]' +root.icon+ '[/size][/font]')
			#text: '[font=mdicons][size=18][color=ffffff00]\ue256[/color][/size][/font]'
			size: self.texture_size
			size_hint: None, None
			height: labellayout.height

			canvas.before:
				Color:
					rgba: 0, 0, 1, 1
				Rectangle:
					pos: self.pos
					size: self.size

		Label:
			id: labellayout
			markup: True
			text: u'{0}\n[size=13sp][color=999999]{1}[/color][/size]'.format(root.value or '', root.desc or '')
			#text: u'Title\n[size=13sp][color=999999]And the subtitle here[/color][/size]'
			font_size: '15sp'
			text_size: root.width - icon_label.width - radio_button_label.width - (2*root.padding) - (2*root.spacing), None
			size: self.texture_size
			size_hint: None, None

			# set the minimum height of this item so that fat fingers don't have
			# issues on small touchscreen displays (for better UX)
			height: max(self.height, dp(80))

			canvas.before:
				Color:
					rgba: 1, 0, 0, 1
				Rectangle:
					pos: self.pos
					size: self.size

